<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.PasswordReset">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 초기화"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textSize="45dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일을 확인하여"
                android:textColor="@color/black"
                android:layout_marginTop="60dp"
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 재설정 링크를 누르세요"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textAlignment="center"
                />
        </LinearLayout>


        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
          >
          <EditText
              android:id="@+id/editID"
              android:layout_width="220dp"
              android:layout_height="40dp"
              android:layout_gravity="center"
              android:background="@drawable/buttonblackline"
              android:ems="10"
              android:hint="이메일을 입력하세요."
              android:inputType="textEmailAddress"
              android:text="" />

          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/sendResetBtn"
              android:layout_width="90dp"
              android:layout_height="40dp"
              android:layout_gravity="center"
              android:background="@drawable/buttonsky"
              android:layout_marginLeft="10dp"
              android:text="보내기"
              android:textColor="@color/black"
              android:textSize="16dp"
              android:textStyle="bold" />
      </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backLogin"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonblue"
            android:text="로그인 화면으로 돌아가기"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</ScrollView>